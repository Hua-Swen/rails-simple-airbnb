<p id="notice"><%= notice %></p>

<h1>All Flats</h1>

<div class="row row-cols-1 row-cols-md-3">
  <% @flats.each do |flat| %>
  <div class="col-lg-4 mb-3 ">
    <div class="card" >
      <img src="<%=flat.image_url%>" class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p><%= flat.address %></p>
        <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %> <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
        <%= link_to "Show", flat %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Destroy", flat, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
  <% end %>
</div>




<% if false %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Description</th>
        <th>Price per night</th>
        <th>Number of guests</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flats.each do |flat| %>
        <tr>
          <td><%= flat.name %></td>
          <td><%= flat.address %></td>
          <td><%= flat.description %></td>
          <td><%= flat.price_per_night %></td>
          <td><%= flat.number_of_guests %></td>
          <td><div class="img-square"><img src=<%=flat.image_url%>></div></td>
          <td><%= link_to 'Show', flat %></td>
          <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
          <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

